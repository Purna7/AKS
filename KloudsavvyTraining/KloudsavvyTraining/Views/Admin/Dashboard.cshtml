@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="page-header">
    <h1>Admin Dashboard</h1>
    <p>Manage platform content and users</p>
</div>

<div class="dashboard-stats">
    <div class="stat-card">
        <div class="stat-icon">ðŸ“š</div>
        <div class="stat-info">
            <div class="stat-value">@ViewBag.TotalCourses</div>
            <div class="stat-label">Total Courses</div>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon">âœ“</div>
        <div class="stat-info">
            <div class="stat-value">@ViewBag.PublishedCourses</div>
            <div class="stat-label">Published</div>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon">ðŸ‘¥</div>
        <div class="stat-info">
            <div class="stat-value">@ViewBag.TotalEnrollments</div>
            <div class="stat-label">Enrollments</div>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon">ðŸ’°</div>
        <div class="stat-info">
            <div class="stat-value">$@ViewBag.TotalRevenue.ToString("N0")</div>
            <div class="stat-label">Revenue</div>
        </div>
    </div>
</div>

<div class="section">
    <h2>All Courses</h2>
    <div class="admin-table">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Instructor</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Students</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in ViewBag.Courses)
                {
                    <tr>
                        <td>@course.CourseId</td>
                        <td>@course.Title</td>
                        <td>@course.InstructorName</td>
                        <td>@course.CategoryName</td>
                        <td>@course.GetFormattedPrice()</td>
                        <td>@course.EnrollmentCount</td>
                        <td>
                            <span class="status-badge @(course.IsPublished ? "status-published" : "status-draft")">
                                @(course.IsPublished ? "Published" : "Draft")
                            </span>
                        </td>
                        <td class="action-buttons">
                            @if (!course.IsPublished)
                            {
                                using (Html.BeginForm("ApproveCourse", "Admin", FormMethod.Post, new { style = "display:inline;" }))
                                {
                                    <input type="hidden" name="id" value="@course.CourseId" />
                                    <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                }
                            }
                            <a href="@Url.Action("Details", "Courses", new { id = course.CourseId })" class="btn btn-sm">View</a>
                            @using (Html.BeginForm("DeleteCourse", "Admin", FormMethod.Post, new { style = "display:inline;" }))
                            {
                                <input type="hidden" name="id" value="@course.CourseId" />
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this course?')">Delete</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
