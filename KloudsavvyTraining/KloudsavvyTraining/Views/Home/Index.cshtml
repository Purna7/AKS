@{
    ViewBag.Title = "Home - Kloudsavvy Training";
}

<div class="hero-banner">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <div class="hero-badge">New Platform Launch</div>
        <h1 class="hero-title">Master Technology with Expert-Led Courses</h1>
        <p class="hero-subtitle">Learn DevOps, Cloud, Kubernetes, and more with hands-on labs and real-world projects</p>
        <div class="hero-actions">
            <a href="@Url.Action("Index", "Courses")" class="hero-btn">
                Explore Courses
                <span class="btn-arrow">‚Üí</span>
            </a>
        </div>
        <div class="hero-stats">
            <div class="stat-item">
                <span class="stat-number">@ViewBag.TotalStudents+</span>
                <span class="stat-label">Students</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">@ViewBag.TotalCourses+</span>
                <span class="stat-label">Courses</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">@ViewBag.TotalInstructors+</span>
                <span class="stat-label">Expert Instructors</span>
            </div>
        </div>
    </div>
</div>

<section class="features">
    <div class="feature-card-modern">
        <div class="feature-icon feature-icon-blue">
            <svg viewBox="0 0 24 24" fill="white"><path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/></svg>
        </div>
        <h3>Industry Expert Instructors</h3>
        <p>Learn from professionals with years of real-world experience</p>
    </div>
    <div class="feature-card-modern">
        <div class="feature-icon feature-icon-green">
            <svg viewBox="0 0 24 24" fill="white"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
        </div>
        <h3>Hands-On Labs</h3>
        <p>Practice with real environments and interactive exercises</p>
    </div>
    <div class="feature-card-modern">
        <div class="feature-icon feature-icon-purple">
            <svg viewBox="0 0 24 24" fill="white"><path d="M20 6h-2.18c.11-.31.18-.65.18-1a2.996 2.996 0 0 0-5.5-1.65l-.5.67-.5-.68C10.96 2.54 10.05 2 9 2 7.34 2 6 3.34 6 5c0 .35.07.69.18 1H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-5-2c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zM9 4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm11 15H4v-2h16v2zm0-5H4V8h5.08L7 10.83 8.62 12 11 8.76l1-1.36 1 1.36L15.38 12 17 10.83 14.92 8H20v6z"/></svg>
        </div>
        <h3>Certificates</h3>
        <p>Earn recognized certificates upon course completion</p>
    </div>
    <div class="feature-card-modern">
        <div class="feature-icon feature-icon-orange">
            <svg viewBox="0 0 24 24" fill="white"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
        </div>
        <h3>Lifetime Access</h3>
        <p>Learn at your own pace with permanent course access</p>
    </div>
</section>

<section class="section">
    <h2 class="section-title">Popular Courses</h2>
    <div class="course-grid">
        @foreach (var course in ViewBag.FeaturedCourses)
        {
            <div class="course-card">
                <div class="course-thumbnail">@course.Thumbnail</div>
                <div class="course-info">
                    <span class="course-badge">@course.Level</span>
                    <h3>@course.Title</h3>
                    <p class="course-description">@course.ShortDescription</p>
                    <div class="course-meta">
                        <span class="meta-item">üë®‚Äçüè´ @course.InstructorName</span>
                        <span class="meta-item">‚≠ê @course.AverageRating</span>
                    </div>
                    <div class="course-footer">
                        <span class="course-price">@course.GetFormattedPrice()</span>
                        <a href="@Url.Action("Details", "Courses", new { id = course.CourseId })" class="btn btn-primary">View Course</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<section class="section section-alt">
    <h2 class="section-title">Browse by Category</h2>
    <div class="category-grid">
        @foreach (var category in ViewBag.Categories)
        {
            <a href="@Url.Action("Index", "Courses", new { category = category.Name })" class="category-card-large">
                <div class="category-image category-@category.Name.ToLower().Replace(" ", "-")"></div>
                <div class="category-content">
                    <span class="category-badge">@category.CourseCount Courses</span>
                    <h3>@category.Icon @category.Name</h3>
                    <p>@category.Description</p>
                    <span class="category-link">Explore Now ‚Üí</span>
                </div>
            </a>
        }
    </div>
</section>

<section class="cta-section">
    <div class="cta-content">
        <h2>Ready to Start Learning?</h2>
        <p>Join thousands of students mastering technology skills</p>
        <a href="@Url.Action("Index", "Courses")" class="btn btn-large">Browse All Courses</a>
    </div>
</section>
