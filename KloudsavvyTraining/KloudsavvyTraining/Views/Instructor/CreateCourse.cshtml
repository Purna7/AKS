@model KloudsavvyTraining.Models.Course
@{
    ViewBag.Title = "Create Course";
}

<div class="page-header">
    <h1>Create New Course</h1>
    <p>Share your knowledge with students worldwide</p>
</div>

<div class="form-container">
    @using (Html.BeginForm("CreateCourse", "Instructor", FormMethod.Post, new { @class = "course-form" }))
    {
        <div class="form-section">
            <h2>Course Information</h2>
            
            <div class="form-group">
                <label for="Title">Course Title *</label>
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "e.g., Docker for Absolute Beginners" })
            </div>
            
            <div class="form-group">
                <label for="ShortDescription">Short Description *</label>
                @Html.TextBoxFor(m => m.ShortDescription, new { @class = "form-control", placeholder = "Brief one-line description" })
            </div>
            
            <div class="form-group">
                <label for="Description">Full Description *</label>
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5, placeholder = "Detailed course description" })
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="CategoryId">Category *</label>
                    <select name="CategoryId" class="form-control">
                        <option value="1">DevOps</option>
                        <option value="2">Cloud Computing</option>
                        <option value="3">Kubernetes</option>
                        <option value="4">CI/CD</option>
                        <option value="5">Linux</option>
                        <option value="6">Programming</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="Level">Level *</label>
                    <select name="Level" class="form-control">
                        <option value="Beginner">Beginner</option>
                        <option value="Intermediate">Intermediate</option>
                        <option value="Advanced">Advanced</option>
                    </select>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="Price">Price (USD) *</label>
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", step = "0.01", placeholder = "49.99" })
                </div>
                
                <div class="form-group">
                    <label for="Thumbnail">Thumbnail Emoji</label>
                    @Html.TextBoxFor(m => m.Thumbnail, new { @class = "form-control", placeholder = "üê≥" })
                </div>
            </div>
        </div>
        
        <div class="form-section">
            <h2>Learning Outcomes</h2>
            <div class="form-group">
                <label>What will students learn? (comma-separated)</label>
                <textarea name="LearningOutcomes" class="form-control" rows="3" placeholder="e.g., Understand Docker architecture, Create containers, Build images"></textarea>
            </div>
        </div>
        
        <div class="form-section">
            <h2>Prerequisites</h2>
            <div class="form-group">
                <label>Course prerequisites (comma-separated)</label>
                <textarea name="Prerequisites" class="form-control" rows="2" placeholder="e.g., Basic Linux knowledge, Command line familiarity"></textarea>
            </div>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary btn-large">Create Course</button>
            <a href="@Url.Action("Dashboard")" class="btn btn-outline btn-large">Cancel</a>
        </div>
    }
</div>
