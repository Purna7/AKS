<div class="dashboard-actions">
    <a href="@Url.Action("CreateCourse")" class="btn btn-primary btn-large">+ Create New Course</a>
    <a href="#upload" class="btn btn-outline btn-large">Upload Video</a>
</div>

<div class="section">
    <h2>Your Courses</h2>
    <div class="course-grid">
        @foreach (var course in ViewBag.MyCourses)
        {
            <div class="course-card">
                <div class="course-thumbnail">@course.Thumbnail</div>
                <div class="course-info">
                    <div class="course-status-badge @(course.IsPublished ? "published" : "draft")">
                        @(course.IsPublished ? "Published" : "Draft")
                    </div>
                    <h3>@course.Title</h3>
                    <div class="course-stats">
                        <span>ğŸ‘¥ @course.EnrollmentCount students</span>
                        <span>â­ @course.AverageRating</span>
                        <span>ğŸ¥ @course.TotalVideos videos</span>
                    </div>
                    <div class="course-footer">
                        <span class="course-price">@course.GetFormattedPrice()</span>
                        <div class="course-actions">
                            <a href="@Url.Action("EditCourse", new { id = course.CourseId })" class="btn btn-sm">Edit</a>
                            <a href="@Url.Action("Details", "Courses", new { id = course.CourseId })" class="btn btn-sm btn-outline">View</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
