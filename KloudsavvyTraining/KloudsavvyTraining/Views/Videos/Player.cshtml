@model KloudsavvyTraining.Models.Video
@{
    ViewBag.Title = Model.Title;
    var course = ViewBag.Course;
}

<div class="video-player-page">
    <div class="video-player-container">
        <div class="video-wrapper">
            <video id="courseVideo" width="100%" height="100%" controls controlsList="nodownload" preload="metadata">
                <source src="@Model.VideoUrl" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
        
        <div class="video-controls">
            @if (ViewBag.PrevVideo != null)
            {
                <a href="@Url.Action("Player", new { courseId = course.CourseId, videoId = ViewBag.PrevVideo.VideoId })" 
                   class="btn btn-secondary">← Previous</a>
            }
            
            <span class="video-progress">Video @Model.OrderIndex of @course.TotalVideos</span>
            
            @if (ViewBag.NextVideo != null)
            {
                <a href="@Url.Action("Player", new { courseId = course.CourseId, videoId = ViewBag.NextVideo.VideoId })" 
                   class="btn btn-primary">Next →</a>
            }
        </div>
        
        <div class="video-info-section">
            <h1>@Model.Title</h1>
            <p>@Model.Description</p>
            
            <div class="course-context">
                <h3>Course: @course.Title</h3>
                <p>Instructor: @course.InstructorName</p>
                <a href="@Url.Action("Details", "Courses", new { id = course.CourseId })" class="btn btn-outline">Back to Course</a>
            </div>
        </div>
    </div>
    
    <div class="playlist-sidebar">
        <h3>Course Content</h3>
        <div class="playlist">
            @foreach (var video in course.Videos)
            {
                <a href="@Url.Action("Player", new { courseId = course.CourseId, videoId = video.VideoId })" 
                   class="playlist-item @(video.VideoId == Model.VideoId ? "active" : "") @(!video.IsFree ? "locked" : "")">
                    <span class="playlist-number">@video.OrderIndex</span>
                    <div class="playlist-info">
                        <div class="playlist-title">@video.Title</div>
                        <div class="playlist-duration">@video.GetFormattedDuration()</div>
                    </div>
                    @if (!video.IsFree)
                    {
                        <span class="playlist-lock">Locked</span>
                    }
                </a>
            }
        </div>
    </div>
</div>

@section scripts {
<script>
    $(document).ready(function() {
        var video = document.getElementById('courseVideo');
        var videoWatched = false;
        
        // Track video progress
        video.addEventListener('timeupdate', function() {
            var progress = (video.currentTime / video.duration) * 100;
            
            // Mark as watched when 90% complete
            if (progress >= 90 && !videoWatched) {
                videoWatched = true;
                console.log('Video @Model.VideoId marked as completed');
                
                // You can add AJAX call here to save progress to server
                // $.post('/Enrollment/UpdateProgress', { videoId: @Model.VideoId, progress: 100 });
            }
        });
        
        // Auto-play next video option (optional)
        video.addEventListener('ended', function() {
            @if (ViewBag.NextVideo != null)
            {
                <text>
                // Uncomment to auto-play next video
                // setTimeout(function() {
                //     window.location.href = '@Url.Action("Player", new { courseId = ViewBag.Course.CourseId, videoId = ViewBag.NextVideo.VideoId })';
                // }, 3000);
                </text>
            }
        });
        
        // Save playback position
        var videoKey = 'video_@(Model.VideoId)_position';
        
        video.addEventListener('pause', function() {
            localStorage.setItem(videoKey, video.currentTime);
        });
        
        // Restore playback position
        var savedPosition = localStorage.getItem(videoKey);
        if (savedPosition && savedPosition > 0) {
            video.currentTime = parseFloat(savedPosition);
        }
    });
</script>
}
