@model LibraryManagement.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    @if (Model.IsEbook)
                    {
                        <span class="me-2">ðŸ’»</span>
                    }
                    else
                    {
                        <span class="me-2">ðŸ“š</span>
                    }
                    @Model.Title
                </h2>
                <a asp-action="Index" class="btn btn-ryl-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Main Book Information -->
        <div class="col-lg-8 mb-4">
            <div class="card card-ryl shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Book Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Book Type</label>
                            <div class="fw-medium">
                                @if (Model.IsEbook)
                                {
                                    <span class="badge badge-ryl-success">ðŸ’» eBook</span>
                                }
                                else
                                {
                                    <span class="badge badge-ryl-primary">ðŸ“š Physical Book</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">ISBN</label>
                            <div class="fw-medium">@Model.ISBN</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Author</label>
                            <div class="fw-medium">@Model.Author</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Publisher</label>
                            <div class="fw-medium">@Model.Publisher</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Publication Year</label>
                            <div class="fw-medium">@Model.PublicationYear</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Category</label>
                            <div class="fw-medium">
                                <span class="badge bg-secondary">@Model.Category</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Language</label>
                            <div class="fw-medium">@Model.Language</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Pages</label>
                            <div class="fw-medium">@Model.Pages</div>
                        </div>
                        
                        @if (Model.IsEbook)
                        {
                            <div class="col-md-6">
                                <label class="text-muted small">File Format</label>
                                <div class="fw-medium">
                                    <span class="badge bg-info">@Model.FileFormat</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">File Size</label>
                                <div class="fw-medium">@Model.FileSizeInMB MB</div>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">Download Count</label>
                                <div class="fw-medium">
                                    <i class="bi bi-download me-1"></i>@Model.DownloadCount downloads
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">Availability</label>
                                <div class="fw-medium">
                                    <span class="badge badge-ryl-success">Always Available</span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-6">
                                <label class="text-muted small">Shelf Location</label>
                                <div class="fw-medium">@Model.ShelfLocation</div>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">Total Copies</label>
                                <div class="fw-medium">@Model.TotalCopies</div>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">Available Copies</label>
                                <div class="fw-medium">
                                    @if (Model.AvailableCopies > 0)
                                    {
                                        <span class="badge badge-ryl-success">@Model.AvailableCopies Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-ryl-danger">Not Available</span>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">Borrowed Copies</label>
                                <div class="fw-medium">@Model.BorrowedCopies()</div>
                            </div>
                        }
                        
                        <div class="col-md-6">
                            <label class="text-muted small">Added Date</label>
                            <div class="fw-medium">@Model.AddedDate.ToString("MMM dd, yyyy")</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Status</label>
                            <div class="fw-medium">
                                @if (Model.IsActive)
                                {
                                    <span class="badge badge-ryl-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-ryl-danger">Inactive</span>
                                }
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="text-muted small">Description</label>
                            <div class="fw-medium">@Model.Description</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions Card -->
        <div class="col-lg-4 mb-4">
            <div class="card card-ryl shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-gear me-2"></i>Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.IsEbook)
                        {
                            <a asp-action="ReadEbook" asp-route-id="@Model.BookId" class="btn btn-ryl-primary" style="font-size: 1.1rem; padding: 0.75rem;">
                                <i class="bi bi-book-half me-2"></i>ðŸ“– Read eBook Online
                            </a>
                            <a asp-action="DownloadEbook" asp-route-id="@Model.BookId" class="btn btn-ryl-accent">
                                <i class="bi bi-download me-2"></i>ðŸ“¥ Download eBook
                            </a>
                        }
                        else if (Model.IsAvailable())
                        {
                            <a asp-controller="Transactions" asp-action="Borrow" asp-route-bookId="@Model.BookId" class="btn btn-ryl-primary">
                                <i class="bi bi-arrow-left-right me-2"></i>Borrow Book
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled>
                                <i class="bi bi-x-circle me-2"></i>Not Available
                            </button>
                        }
                        
                        <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-ryl-secondary">
                            <i class="bi bi-pencil me-2"></i>Edit Details
                        </a>
                        <hr>
                        <form asp-action="Delete" asp-route-id="@Model.BookId" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash me-2"></i>Delete Book
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            @if (!Model.IsEbook)
            {
                <!-- Quick Stats Card -->
                <div class="card card-ryl shadow-sm mt-3">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-graph-up me-2"></i>Quick Stats
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted small">Availability</span>
                                <span class="fw-bold">@((int)((double)Model.AvailableCopies / Model.TotalCopies * 100))%</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-success" role="progressbar" 
                                     style="width: @((int)((double)Model.AvailableCopies / Model.TotalCopies * 100))%">
                                </div>
                            </div>
                        </div>
                        <div class="row text-center">
                            <div class="col-6">
                                <div class="p-2 rounded" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                    <div class="text-white fw-bold fs-4">@Model.TotalCopies</div>
                                    <div class="text-white-50 small">Total</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-2 rounded" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                                    <div class="text-white fw-bold fs-4">@Model.BorrowedCopies()</div>
                                    <div class="text-white-50 small">Borrowed</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- eBook Stats Card -->
                <div class="card card-ryl shadow-sm mt-3">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-graph-up me-2"></i>Download Stats
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="p-3 rounded mb-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <div class="text-white fw-bold" style="font-size: 2.5rem;">@Model.DownloadCount</div>
                            <div class="text-white-50">Total Downloads</div>
                        </div>
                        <div class="text-muted small">
                            <i class="bi bi-info-circle me-1"></i>
                            This eBook is always available for download
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add animation on load
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('.container-fluid').style.animation = 'fadeIn 0.5s ease-in';
        });
    </script>
}
