@model IEnumerable<LibraryManagement.Models.Donation>
@{
    ViewData["Title"] = "Book Donations";
}

<div class="d-flex justify-content-between align-items-center mb-4 fade-in">
    <div>
        <h1>üìö Book Donations</h1>
        <p class="text-muted">Manage book donations from generous donors</p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-ryl-accent">üíù Donate a Book</a>
        <a asp-action="DonorReport" class="btn btn-ryl-secondary">üìä Donor Report</a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card card-ryl card-ryl-primary">
            <div class="card-body text-center">
                <div class="quick-stat-icon">üì¶</div>
                <h3 class="display-6">@ViewBag.TotalDonations</h3>
                <p class="mb-0">Total Donations</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card card-ryl card-ryl-warning">
            <div class="card-body text-center">
                <div class="quick-stat-icon">‚è≥</div>
                <h3 class="display-6">@ViewBag.PendingDonations</h3>
                <p class="mb-0">Pending Review</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card card-ryl card-ryl-success">
            <div class="card-body text-center">
                <div class="quick-stat-icon">‚úÖ</div>
                <h3 class="display-6">@ViewBag.AcceptedDonations</h3>
                <p class="mb-0">Accepted</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card card-ryl card-ryl-info">
            <div class="card-body text-center">
                <div class="quick-stat-icon">ü§ù</div>
                <h3 class="display-6">@ViewBag.TotalDonors</h3>
                <p class="mb-0">Unique Donors</p>
            </div>
        </div>
    </div>
</div>

<!-- Filter Form -->
<div class="card card-ryl mb-4" x-data>
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-4">
                    <select name="status" class="form-select form-control-ryl">
                        <option value="">All Statuses</option>
                        @foreach (var stat in ViewBag.Statuses)
                        {
                            <option value="@stat" selected="@(Context.Request.Query["status"] == stat)">@stat</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-ryl-primary w-100">üîç Filter</button>
                </div>
                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">‚Üª Clear</a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Donations Table -->
<div class="table-responsive">
    <table class="table table-ryl table-hover">
        <thead>
            <tr>
                <th>Donation ID</th>
                <th>Donor Name</th>
                <th>Book Title</th>
                <th>Author</th>
                <th>Condition</th>
                <th>Copies</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var donation in Model)
                {
                    <tr>
                        <td>@donation.DonationId</td>
                        <td>
                            <strong>@donation.DonorName</strong><br />
                            <small class="text-muted">@donation.DonorEmail</small>
                        </td>
                        <td>@donation.BookTitle</td>
                        <td>@donation.BookAuthor</td>
                        <td>
                            @if (donation.BookCondition == "Excellent")
                            {
                                <span class="badge badge-ryl-success">‚≠ê @donation.BookCondition</span>
                            }
                            else if (donation.BookCondition == "Good")
                            {
                                <span class="badge badge-ryl-info">üëç @donation.BookCondition</span>
                            }
                            else if (donation.BookCondition == "Fair")
                            {
                                <span class="badge badge-ryl-warning">‚ö†Ô∏è @donation.BookCondition</span>
                            }
                            else
                            {
                                <span class="badge badge-ryl-danger">üìâ @donation.BookCondition</span>
                            }
                        </td>
                        <td>@donation.Copies</td>
                        <td>@donation.DonationDate.ToString("MMM dd, yyyy")</td>
                        <td>
                            @if (donation.AcceptanceStatus == "Accepted")
                            {
                                <span class="badge badge-ryl-success">‚úÖ Accepted</span>
                            }
                            else if (donation.AcceptanceStatus == "Pending")
                            {
                                <span class="badge badge-ryl-warning">‚è≥ Pending</span>
                            }
                            else
                            {
                                <span class="badge badge-ryl-danger">‚ùå Rejected</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@donation.DonationId" class="btn btn-sm btn-outline-primary">üëÅÔ∏è Details</a>
                            @if (donation.IsPending())
                            {
                                <button type="button" class="btn btn-sm btn-ryl-accent" data-bs-toggle="modal" data-bs-target="#acceptModal@(donation.DonationId)">
                                    ‚úì Accept
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#rejectModal@(donation.DonationId)">
                                    ‚úó Reject
                                </button>
                            }
                        </td>
                    </tr>

                    <!-- Accept Modal -->
                    <div class="modal fade" id="acceptModal@(donation.DonationId)" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Accept Donation</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <form asp-action="Accept" asp-route-id="@donation.DonationId" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="modal-body">
                                        <p><strong>Book:</strong> @donation.BookTitle by @donation.BookAuthor</p>
                                        <p><strong>Donor:</strong> @donation.DonorName</p>
                                        <div class="mb-3">
                                            <label for="reviewerName" class="form-label">Reviewed By</label>
                                            <input type="text" name="reviewerName" class="form-control" value="Librarian" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="notes" class="form-label">Review Notes</label>
                                            <textarea name="notes" class="form-control" rows="3">@donation.Notes</textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-ryl-accent">‚úì Accept & Add to Inventory</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Reject Modal -->
                    <div class="modal fade" id="rejectModal@(donation.DonationId)" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Reject Donation</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <form asp-action="Reject" asp-route-id="@donation.DonationId" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="modal-body">
                                        <p><strong>Book:</strong> @donation.BookTitle by @donation.BookAuthor</p>
                                        <p><strong>Donor:</strong> @donation.DonorName</p>
                                        <div class="mb-3">
                                            <label for="reviewerName" class="form-label">Reviewed By</label>
                                            <input type="text" name="reviewerName" class="form-control" value="Librarian" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="notes" class="form-label">Reason for Rejection</label>
                                            <textarea name="notes" class="form-control" rows="3" placeholder="Please provide a reason..." required></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">‚úó Reject Donation</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center py-4">
                        <p class="text-muted">No donations found. Encourage community members to donate books!</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
