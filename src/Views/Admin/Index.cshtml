@model IEnumerable<ECommerceApp.Models.Product>
@{
    ViewBag.Title = "Admin - Manage Products";
}

<div class="page-header">
    <h1>Manage Products</h1>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New Product</a>
</div>

<div class="admin-table-container">
    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>$@product.Price.ToString("N2")</td>
                    <td>
                        @if (product.InStock)
                        {
                            <span class="badge badge-success">In Stock</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Out of Stock</span>
                        }
                    </td>
                    <td class="action-buttons">
                        <a href="@Url.Action("Edit", new { id = product.Id })" class="btn btn-sm btn-secondary">Edit</a>
                        @using (Html.BeginForm("Delete", "Admin", new { id = product.Id }, FormMethod.Post, new { style = "display:inline;" }))
                        {
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <p>No products found.</p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Add Your First Product</a>
    </div>
}
