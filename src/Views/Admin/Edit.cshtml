@model ECommerceApp.Models.Product
@{
    ViewBag.Title = "Edit Product";
}

<div class="page-header">
    <h1>Edit Product</h1>
</div>

<div class="admin-form-container">
    @using (Html.BeginForm("Edit", "Admin", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            <label for="Name">Product Name</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label for="Category">Category</label>
            @Html.TextBoxFor(m => m.Category, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label for="Price">Price ($)</label>
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", step = "0.01", min = "0", required = "required" })
        </div>

        <div class="form-group">
            <label>
                @Html.CheckBoxFor(m => m.InStock, new { @class = "form-check-input" })
                In Stock
            </label>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Product</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    }
</div>
