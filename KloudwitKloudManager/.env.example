# Application Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
DATABASE_URL=sqlite:///kloudmanager.db

# AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Azure Credentials
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# GCP Credentials
GCP_PROJECT_ID=your_gcp_project_id
GCP_SERVICE_ACCOUNT_FILE=path_to_service_account_json

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_ORGANIZATION=your_github_organization
GITHUB_USERNAME=your_github_username

# Azure DevOps Configuration
# Generate a Personal Access Token at: https://dev.azure.com/{organization}/_usersSettings/tokens
# Required scopes: Build (read), Code (read), Work Items (read)
AZUREDEVOPS_ORGANIZATION=your_organization_name
AZUREDEVOPS_PAT=your_azure_devops_personal_access_token
AZUREDEVOPS_PROJECT=your_project_name

# Application Settings
REFRESH_INTERVAL=300  # seconds
MAX_WORKERS=5
LOG_LEVEL=INFO